<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <meta name="description" content="@ViewBag.MetaDescription" />
    <meta name="keywords" content="@ViewBag.MetaKeywords" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link type="text/css" href="https://yastatic.net/jquery-ui/1.11.2/themes/flick/jquery-ui.min.css" rel="stylesheet"/>
    <link href="~/Content/chosen.css" rel="stylesheet" />

    <link href="~/Content/skins/all.css" rel="stylesheet" />
</head>
<body>
    <header>
    <div class="container">
        <div class="header_info">
            <div class="row">

                <!--            <div class="col-xs-12"> -->
                <!-- <div class="header"> -->
                <div class="col-md-5">
                    <div class="header_inner_logo">

                    </div>
                </div>
                <div class="col-md-3">
                    <div class="header_inner_contacts">
                       <p class="contact_info">123123123</p>
                        <p class="contact_info">address</p>
                    </div>
                    </div>
                <div class="col-md-4">
                    <div class="header_inner_buttons">
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary">Apple</button>
                            <button type="button" class="btn btn-primary">Samsung</button>
                            <button type="button" class="btn btn-primary">Sony</button>
                        </div>
                    </div>
                </div>

                <!--    </div> -->
                <!-- </div> -->
            </div>
        </div>
    </div>
       <div class="navbar navbar-default">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Application name", "Index", "Home", null, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Products", "Index", "Product")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Producers", "Index", "Producer")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div> 
        </header>
        <div class="container body-content">
            @RenderBody()

            <hr />
            <p class="text-danger">Donec ullamcorper nulla non metus auctor fringilla.</p>



            <footer>
                <p> @(ViewBag.HasProducts??"false")</p>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>

        </div>

        @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/bootstrap")
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script src="~/Scripts/i18n/datepicker-fr.js"></script>
<script src="~/Scripts/i18n/datepicker-ru.js"></script>
    <script src="~/Scripts/scripts.js"></script>
    <script src="~/Scripts/chosen.jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/iCheck/1.0.2/icheck.js"></script>

@RenderSection("scripts", required: false)
    <script src="~/Scripts/mylib.js"></script>

</body>
</html>
